#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Ensure wildcards in globs match dotfiles too.
shopt -s dotglob

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)

source "$BP_DIR/lib/output.sh"
source "$BP_DIR/lib/environment.sh"

if [ ! -f "${ENV_DIR}/PACKAGE_ID" ]; then
    echo "PACKAGE_ID was not set. Aborting" | indent
    exit 1
fi
PACKAGE_ID="$(cat "${ENV_DIR}/PACKAGE_ID")"

if [ ! -f "${ENV_DIR}/PACKAGE_PATH" ]; then
    echo "PACKAGE_PATH was not set. Value will be set to packages/${PACKAGE_ID}" | indent
    PACKAGE_PATH="packages/${PACKAGE_ID}"
else
    PACKAGE_PATH="$(cat "${ENV_DIR}/PACKAGE_PATH")"
fi

export_env_dir "$ENV_DIR"
write_profile "$BP_DIR" "$BUILD_DIR"

header "Package information: ${PACKAGE_ID} - ${PACKAGE_PATH}"

# header "Changing current dir to ${BUILD_DIR}"
cd "${BUILD_DIR}"

header "Installing dependencies (lerna bootstrap)"
lerna bootstrap --scope="${PACKAGE_ID}" --include-dependencies 2>&1 | output

header "Building ${PACKAGE_ID} and its dependencies"
lerna run build --scope="${PACKAGE_ID}" --include-dependencies --stream 2>&1 | output

# header "Going back to previous directory"
# cd -

(
    mv "${BUILD_DIR}/${PACKAGE_PATH}" "${STAGE}" &&
    mv "${BUILD_DIR}/.heroku" "${STAGE}/.heroku"
    mv "${BUILD_DIR}/.profile.d" "${STAGE}/.profile.d"
    rm -rf "${BUILD_DIR}"/* &&
    mv "${STAGE}/$(basename "$PACKAGE_PATH")"/* "${BUILD_DIR}"
    mv "${STAGE}/.heroku" "${BUILD_DIR}/.heroku"
    mv "${STAGE}/.profile.d" "${BUILD_DIR}/.profile.d"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Copied ${PACKAGE_PATH} to root of app successfully" | indent
